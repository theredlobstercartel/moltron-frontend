{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}